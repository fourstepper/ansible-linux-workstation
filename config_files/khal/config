#/etc/khal/khal.conf.sample
[calendars]
[[personal]]
path = ~/.calendars/default/
color = light magenta
[[work]]
path = ~/.calendars/iashro/
color = dark blue


[sqlite]
path = ~/.khal/khal.db

[locale]
local_timezone = Europe/Prague
default_timezone = Europe/Prague

timeformat = %H:%M
dateformat = %d.%m.
longdateformat = %d.%m.%Y
datetimeformat =  %d.%m. %H:%M
longdatetimeformat = %d.%m.%Y %H:%M

firstweekday = 0
# monthdisplay = firstday

[default]
default_calendar = personal
# timedelta = 2 # the default timedelta that list uses
highlight_event_days = True  # the default is False
